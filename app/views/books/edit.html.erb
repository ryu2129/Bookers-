
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="field_box">
   <label for=book_title>Title</label>
  </div>

  <%= f.text_field :title %>

  <div class="field_box">
<label for=book_body>Body</label>
</div>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %><br>
  <%= link_to "show", book_path(@book) %>
  <%= link_to "Back", books_path %>
  <% end %>
